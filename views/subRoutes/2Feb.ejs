    <h2 class="page-title"> รายการกิจกรรมทั้งหมด</h2>
    <div class="activity-container">
      <% if (typeof activities !== 'undefined' && activities.length > 0) { %>
        <% activities.forEach(activity => { %>
          <div class="activity-card">
            <form action="/join-activity" method="post">
              <input type="hidden" name="email" value="<%= email %>">
              <input type="hidden" name="activity_id" value="<%= activity.id %>">
    
              <button type="submit" class="activity-image">
                <img src="<%= activity.image_url || '/img/default.jpg' %>" alt="กิจกรรม <%= activity.name %>">
                <div class="overlay">Join Activity</div>
              </button>
            </form>
    
            <div class="activity-info"> <!-- ✅ แก้ชื่อคลาส -->
              <h3><%= activity.name %></h3>
              <p><%= activity.description %></p>
              <p><strong>Date:</strong> <%= activity.date %></p> <!-- ✅ แก้ <strong> -->
            </div>
          </div> 
        <% }) %>
      <% } else { %>
        <p>No activities in this month.</p> <!-- ✅ ปิด EJS Block ให้ถูกต้อง -->
      <% } %>
    </div>

    <div class="join-button">
      <a href="/contact" class="join-link">
