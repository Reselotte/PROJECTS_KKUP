</section>
<section class="health-blog">
  
  <div class="blog-container">
    <% if (typeof blogs !== 'undefined' && blogs.length > 0) { %> 
      <% blogs.forEach(blog => { %>
        <div class="blog-card">
          <img src="<%= blog.image_url || '/img/default.jpg' %>" alt="<%= blog.title %>">
          <div class="blog-content">
            <h3><%= blog.title %></h3>
            <p><%= blog.content.substring(0, 150) %>...</p>
            <p class="author">By <%= blog.author %> | <%= new Date(blog.published_date).toDateString() %></p>
            
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>❌ No health blogs available at the moment.</p>
    <% } %>
  </div>
</section>




